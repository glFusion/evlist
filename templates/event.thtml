  {!endif}

  {!if datetime_info}
  <div class="evEventItem">
    <label>{$LANG_EVLIST['when']}:</label>
    <div class="evdata" id="when">
      {datetime_info}
      {!if recurring_event}
      <br />{recurring_event}
      {!endif}
    </div>
  </div>
  {!endif}

  {!if address_info}
  <div class="evEventItem">
    <label>{$LANG_EVLIST['where']}:</label>
    <div class="evdata" id="where">
      {address_info}
    </div>
  </div>
  {!endif}

  {!if more_info_link}
  <div class="evEventItem">
    <label>&nbsp;</label>
    <div class="evdata">
