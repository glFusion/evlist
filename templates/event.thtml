{!if login_to_register}
<div clas="evEventRegInfo">
  <span class="info">{$LANG_EVLIST['login_to_register']}</span>
</div>
{!endif}

{!if is_registered}
<div class="evEventRegInfo">
  <div class="evdata">
    Your Regisrations:<br />
    <!-- BEGIN regBlock -->
    {reg_qty} {reg_desc}<br />
